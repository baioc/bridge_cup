<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.ufsc.bridge.android.bridgecup">

    <!-- Acesso a internet para a entity -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/bridge"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/bridge_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".view.activity.CopaActivity"
            android:configChanges="orientation|screenSize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".view.activity.GrupoActivity"
            android:configChanges="orientation|screenSize">
        </activity>

        <activity android:name=".view.activity.SelecaoActivity"
            android:configChanges="orientation|screenSize">
        </activity>

        <activity android:name=".view.activity.PartidaActivity"
            android:configChanges="orientation|screenSize">
        </activity>

    </application>

</manifest>